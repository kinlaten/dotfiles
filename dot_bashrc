# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

#====== Some function

pushd() {
  builtin pushd "$@" >/dev/null
  dirs -v
}

# sysf (no args)
#
# interactive systemctl
#
sysf() {
  local service action status_output status_key

  service=$(systemctl list-units --type=service --plain --all | awk '{print $1}' | fzf)
  if [[ -z "$service" ]]; then return 0; fi

  status_output=$(sudo systemctl status "$service")

  status_key=$(printf "%s" "$status_output" | fzf --prompt="--- Status of $service --- Press ENTER to continue or Q to quit" --expect=enter,q --no-sort)

  if [[ "$status_key" == q* ]]; then
    echo "Bye"
    return 0 # Exit the function cleanly
  fi

  action=$(printf "restart\nstop\nstart\nreload\nenable\ndisable" | fzf --prompt="Action on $service: ")

  if [[ -n "$action" ]]; then
    sudo systemctl "$action" "$service"
  fi
}

# mf (no args)
#
# interactively search manpages
#
mf() {
  man -k . | fzf | awk '{print $2 " " $1}' | tr -d '()' | xargs man
}

# hisfc (no args)
#
# interactively search, fix and run command in history
#
hisfc() {
  local target_command temp_file
  temp_file=$(mktemp)

  # Use 'history' and tail to get the last 1000 items
  history | tail -n 1000 | fzf --tac | sed 's/^[ ]*[0-9]*[ ]*//' >"$temp_file"

  if [[ ! -s "$temp_file" ]]; then
    rm -f "$temp_file"
    return 0
  fi

  command nvim "$temp_file"
  # Execute with bash instead of zsh
  bash "$temp_file"
  command rm "$temp_file"
}

# lp <file-pdf>
#
# print cli
#
lp() {
  local page pageNumber
  read -p "Pages (all, custom): " page

  if [[ "$page" == "all" ]]; then
    command lp -d Brother_HL_L2400DW -o fit-to-page -o media=legal/A4/letter -o sides=two-sided-long-edge "$1"
  elif [[ "$page" == "custom" ]]; then
    read -p "Pages number (#-#): " pageNumber
    command lp -d Brother_HL_L2400DW -P "$pageNumber" -o fit-to-page -o media=legal/A4/letter -o sides=two-sided-long-edge "$1"
  else
    echo "Invalid option selected."
  fi
}

# pdf (no args)
#
# interactively search and open pdf file
#
pdf() {
  local filename=$(fzf)
  if [[ -z "$filename" ]]; then
    return 1
  fi
  command nohup evince $filename >/dev/null 2>&1 &
}

# d <dir-name>
#
# interactively search all subdirectories in dir-name and cd to it
#
d() {
  local dirname root

  if [[ $# -eq 0 ]]; then
    root="$HOME"
  else
    root="$1"
  fi

  dirname=$(fzf --info=inline-right --walker=hidden,dir --preview 'ls -a {}' --walker-root="$root")

  if [[ -z "$dirname" ]]; then
    return 0
  fi

  builtin cd "$dirname"
  command ls
}

# killf (no args)
#
# interactively search and kill process
#
killf() {
  local process
  process=$(ps -eo comm | awk '!seen[$0]++' | fzf)

  if [[ -z $process ]]; then return 0; fi

  command killall $process
}

# y (no args)
#
# make yazi file manager remember current directory
#
y() {
  local tmp
  tmp=$(mktemp -t yazi-cwd.XXXXXX)
  yazi "$@" --cwd-file="$tmp"
  if cwd=$(command cat -- "$tmp") && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
    builtin cd -- "$cwd"
  fi
  rm -f -- "$tmp"
}

# b (no args)
#
# jump to bookmarks
#
b() {
  if [ ! -s ~/.bookmarks ]; then
    echo "No bookmarks yet! Run 'mark' in a folder first."
    return
  fi

  # Read the file and create the menu list (just the basenames)
  # Using awk to get the part before the '|'
  mapfile -t display_names < <(awk -F'|' '{print $1}' ~/.bookmarks)

  PS3="Jump to: "
  select choice in "Quit" "${display_names[@]}"; do
    if [ "$choice" == "Quit" ]; then
      break
    elif [ -n "$choice" ]; then
      # Find the full path associated with the chosen name
      target_path=$(grep "^$choice|" ~/.bookmarks | cut -d'|' -f2-)
      cd "$target_path" && ls --group-directories-first
      break
    else
      echo "Invalid selection."
    fi
  done
}

# j (no args)
#
# similar to b command but with fzf
#
j() {
  local choice=$(cat ~/.bookmarks | fzf --delimiter='\|' --with-nth=1 --reverse --height=40%)
  if [ -n "$choice" ]; then
    cd "$(echo "$choice" | cut -d'|' -f2-)" && ls --group-directories-first
  fi
}
